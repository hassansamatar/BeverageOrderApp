
@model IEnumerable<BeverageOrderApp.Models.Product>

<partial name="_Notification" />
<div>
    <div class ="container p-3">
        <div class ="row pt-2">
            <div class="col-6">
             <h1 class="text-primary"> Product List</h1>
            </div>
            <div class="col-6 text-end" >
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                   <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
                </a>
            </div>
       
    </div>
       <br />
          <br />
    <table class="table table-bordered table-striped" style="width: 100%" >
    <thead>
        <tr>
            <th>
               Product Name
            </th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
           @foreach(var obj in Model)
        {
            <tr>
                <td style="width: 75%">
                    @obj.Name
				</td>
              
                <td >
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-1"><i class="bi bi-pencil-square"></i>Edit</a>

                    </div>
                </td>
                 <td >
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-1"><i class="bi bi-trash"></i>Delete</a>

                    </div>
                </td>
			</tr>
        }
    </tbody>
</table>
</div>
 </div>




