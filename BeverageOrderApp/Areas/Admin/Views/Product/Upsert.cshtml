@model BeverageOrderApp.Models.Product


<div class="row">
   
    <div class="col-md-4">
        <form asp-action="Upsert" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
             <h2> @(Model.Id !=0? "Update":"Create") Product</h2>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input type="file" name="file" class="form-control" />               
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.categoryList" class="form-select" >
                    <option disabled selected>---Select Category-- </option>
                </select>
               
            </div>
             <div class="form-group">
                <label asp-for="BeverageTypeId" class="control-label"></label>
                <select asp-for="BeverageTypeId" asp-items="ViewBag.beverageList" class="form-select" >
                    <option disabled selected>---Select Beverage-- </option>
                </select>
              
            </div>
            <div class="form-group">
                @if(Model.Id!=0)
                {
                    <input type="submit" value="Update" class="btn btn-primary" />
                }
                else
                {
                    <input type="submit" value="Create" class="btn btn-primary" /> 
                }

                    
             

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

