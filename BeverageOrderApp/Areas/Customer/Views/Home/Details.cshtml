@model BeverageOrderApp.Models.ShoppingCart
<form method="post">
     <input hidden asp-for="Id" />
        <div class="card  container pt-4">
            <div class="card-header bg-primary text-white ml-0  row ">
                <div class="col-12 col-md-6">
                    <h1 class="text-white-50">@Model.Product.Name</h1>
                   
                </div>
                               <div class="row pl-2">
                                <div class="col-2 text-primary  text-light"><h4>Count</h4></div>
                                <div class="col-10"><input asp-for="Count" class="form-control"  /></div>
                            </div>
                           <div class="mb-3 col-6">
                           <labeltext-light>Addition List</label>
			              <select asp-for"Addition" asp-items"ViwBag.additionList" class="form-select">
				          <option disabled selected>--Select Addition --</option>
			             </select>
			            
		        </div
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a class="btn btn-success form-control " style="height:50px;" asp-action="Index">Back to Home</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" value="Add to Cart" class="btn btn-success form-control" style="height:50px;">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
</form>