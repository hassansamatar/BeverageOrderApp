@model IEnumerable<BeverageType> ;

<partial name="_Notification" />

<div class ="container p-3">
    <div class =" row pt-4">
        <div class="col-6">
            <h2 class ="text-bg-primary"> Type List </h2>
        </div>
         <div class="col-6 text-end">
             <a asp-controller="BeverageType" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Type
             </a>

        </div>
    </div>

</div>
<table class ="table-bordered table-striped" style ="width:100%">
    <thead>
        <tr>
            <th>
                Beverage Name
            </th>
            
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width: 50%">
                    @obj.Name
                </td>
               
               <td>
                   <div class="w-75 btn-group" role="group">
                       <a asp-controller="BeverageType" asp-action="Edit" asp-route-Id="@obj.Id" 
                        class="btn btn-primary mx-2"
                       > 
                       <i class="bi bi-pencil-square"></i> 
                       Edit
                   </a>
                    <a asp-controller="BeverageType" asp-action="Delete" asp-route-Id="@obj.Id" 
                        class="btn btn-danger mx-2"
                       > 
                      <i class="bi bi-trash-fill"></i>
                       Delete
                   </a>
                   </div>
               </td>
            </tr>
        }
    </tbody>
</table>